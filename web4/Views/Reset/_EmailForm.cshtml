

@model web4.Models.ResetModel
<div>
    <form asp-antiforgery="true" asp-action="Email" asp-controller="Reset">
        <h4>
            @ViewBag.Title
        </h4>
        <div class="validation">
            <label asp-for="email"></label>
            <input type="text" asp-for="email" />
            <span asp-validation-for="email"></span>
        </div>
        <button type="submit" name="submit" value="have">I have a code</button>
        <button type="submit" name="submit" value="send">Send Code</button>
    </form>
</div>

